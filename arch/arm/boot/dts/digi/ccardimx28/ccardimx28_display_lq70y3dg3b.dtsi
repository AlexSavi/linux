/ {
	apb@80000000 {
		apbh@80000000 {
			pinctrl@80018000 {
				lcdif_pins_ccard: lcdif_ccard@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						0x11e0 /* MX28_PAD_LCD_DOTCLK__LCD_DOTCLK */
						0x11f0 /* MX28_PAD_LCD_ENABLE__LCD_ENABLE */
						0x31e1 /* MX28_PAD_LCD_RESET__LCD_VSYNC */
						0x11d0 /* MX28_PAD_LCD_HSYNC__LCD_HSYNC */
					>;
					fsl,drive-strength = <1>;
					fsl,voltage = <1>;
					fsl,pull-up = <0>;
				};
			};

			lcdif@80030000 {
				pinctrl-names = "default";
				pinctrl-0 = <&lcdif_18bit_pins_a
					     &lcdif_pins_ccard>;
				display = <&lq70y3dg3b>;
				status = "okay";

				/* Sharp LQ70Y3DG3B */
				lq70y3dg3b: display {
                                       bits-per-pixel = <32>;
                                       bus-width = <18>;

                                       display-timings {
						native-mode = <&timing0>;
							timing0: timing0 {
							clock-frequency = <33500000>;
							hactive = <800>;
							vactive = <480>;
							hback-porch = <129>;
							hfront-porch = <110>;
							vback-porch = <33>;
							vfront-porch = <5>;
							hsync-len = <5>;
							vsync-len = <2>;
							hsync-active = <0>;
							vsync-active = <0>;
							de-active = <1>;
							pixelclk-active = <0>;
						};
                                       };
				};
			};
		};

		apbx@80040000 {
			pwm0: pwm@80064000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pwm0_pins_b>;
				status = "okay";
			};
		};
	};

	backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm0 0 15000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		/* inversed polarity of backlight in HR_LCD (0 = on) */
		default-brightness-level = <1>;
		status = "okay";
	};
};
