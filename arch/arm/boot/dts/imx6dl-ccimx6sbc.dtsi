#include "imx6dl.dtsi"
/* ConnectCore 6 (common)*/
#include "imx6qdl-ccimx6.dtsi"
#include "imx6qdl-ccimx6sbc.dtsi"

/ {
	model = "Digi International ConnectCore 6 Single Board Computer.";
	compatible = "digi,ccimx6sbc", "digi,ccimx6", "fsl,imx6dl";
	digi,machine,name = "ccimx6sbc";

	aliases {
		mxcfb0 = &mxcfb1;
		mxcfb1 = &mxcfb2;
	};

	v4l2_cap_0 {
		ipu_id = <0>;
		csi_id = <1>;
	};

	v4l2_cap_1 {
		ipu_id = <0>;
		csi_id = <0>;
	};
};

&hdmi_core {
	ipu_id = <0>;
	disp_id = <1>;
	status = "okay";
};

&ldb {
	lvds-channel@0 {
		crtc = "ipu1-di0";
		status = "okay";
		primary;
	};
};

&i2c3 {
	ov5640_mipi: ov5640_mipi@4c {
		ipu_id = <0>;
		csi_id = <1>;
	};
};

&mipi_csi {
	ipu_id = <0>;
	csi_id = <1>;
};
